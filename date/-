//TODO
}

	Date& Gregorian::add_month(int n = 1)
{
//TODO
}
protected:

	bool Gregorian::is_leap_year(int year) const
{

}

	int Gregorian::days_this_month(int year, int month) const
{

}

	static const int days_in_week = 7;
	static const int months_in_year = 12;
};

